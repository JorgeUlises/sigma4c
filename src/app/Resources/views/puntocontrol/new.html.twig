{% extends 'sigmabase.html.twig' %}

{% block body %}
    <h1>Nuevo Punto de Control</h1>

    {{ form_start(form, {'attr': {'class': 'form-horizontal'}}) }}
    <div class="form-group">
        {{ form_label(form.etiqueta, 'Etiqueta') }}
        {{ form_errors(form.etiqueta) }}
        {{ form_widget(form.etiqueta, {'attr': {'class': 'form-control'}}) }}
    </div>
    <div class="form-group">
        {{ form_label(form.geometria, 'Geometr√≠a') }}
        {% include 'puntocontrol/editor.html.twig' %}
        {{ form_errors(form.geometria) }}
        {{ form_widget(form.geometria, {'attr': {'class': 'form-control'}}) }}
    </div>
    <div class="form-group">
        {{ form_label(form.idProyecto, 'Proyecto') }}
        {{ form_errors(form.idProyecto) }}
        {{ form_widget(form.idProyecto, {'attr': {'class': 'form-control'}}) }}
    </div>
    <input class="btn btn-default" type="submit" value="Crear"/>
    {{ form_end(form) }}
    <br/>

    <ul class="list-inline">
        <li>
            <a class="btn btn-info" href="{{ path('puntocontrol_index') }}">Volver</a>
        </li>
    </ul>
{% endblock %}
