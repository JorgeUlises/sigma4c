{% extends 'sigmabase.html.twig' %}

{% block body %}
    <h1>Editar Usuario</h1>

    {{ form_start(edit_form, {'attr': {'class': 'form-horizontal'}}) }}
    <div class="form-group">
        {{ form_label(edit_form.nickname, 'Nombre') }}
        {{ form_errors(edit_form.nickname) }}
        {{ form_widget(edit_form.nickname, {'attr': {'class': 'form-control'}}) }}
    </div>
    <div class="form-group">
        {{ form_label(edit_form.email, 'Correo') }}
        {{ form_errors(edit_form.email) }}
        {{ form_widget(edit_form.email, {'attr': {'class': 'form-control'}}) }}
    </div>
    <div class="form-group">
        {{ form_label(edit_form.clave, 'Contrase√±a') }}
        {{ form_errors(edit_form.clave) }}
        {{ form_widget(edit_form.clave, {'attr': {'class': 'form-control'}}) }}
    </div>
    <div class="form-group">
        {{ form_label(edit_form.idEmpresa, 'Empresa') }}
        {{ form_errors(edit_form.idEmpresa) }}
        {{ form_widget(edit_form.idEmpresa, {'attr': {'class': 'form-control'}}) }}
    </div>
    <div class="form-group">
        {{ form_label(edit_form.idRol, 'Rol') }}
        {{ form_errors(edit_form.idRol) }}
        {{ form_widget(edit_form.idRol, {'attr': {'class': 'form-control'}}) }}
    </div>
    <input class="btn btn-default"  type="submit" value="Guardar"/>
    {{ form_end(edit_form) }}
    <br/>
    <ul class="list-inline">
        <li>
            <a class="btn btn-info" href="{{ path('usuario_index') }}">Volver</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input class="btn btn-danger" type="submit" value="Eliminar">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
