{% extends 'sigmabase.html.twig' %}

{% block body %}
    <h1>Muestra</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ muestra.id }}</td>
            </tr>
            <tr>
                <th>Responsable</th>
                <td>{{ muestra.responsable }}</td>
            </tr>
            <tr>
                <th>Elemento Ambiental</th>
                <td>{{ muestra.elementoAmbiental }}</td>
            </tr>
            <tr>
                <th>Foto</th>
                <td>{{ muestra.fotos }}</td>
            </tr>
            <tr>
                <th>Fecha Toma</th>
                <td>{% if muestra.fechaToma %}{{ muestra.fechaToma|date('Y-m-d') }}{% endif %}</td>
            </tr>
            <tr>
                <th>Fecha Recepción</th>
                <td>{% if muestra.fechaRecepcion %}{{ muestra.fechaRecepcion|date('Y-m-d') }}{% endif %}</td>
            </tr>
            <tr>
                <th>Fecha Análisis</th>
                <td>{% if muestra.fechaAnalisis %}{{ muestra.fechaAnalisis|date('Y-m-d') }}{% endif %}</td>
            </tr>
            <tr>
                <th>Tipo Muestreo</th>
                <td>{{ muestra.tipoMuestreo }}</td>
            </tr>
            <tr>
                <th>Análisis</th>
                <td>{{ muestra.analisis }}</td>
            </tr>
            <tr>
                <th>Pdf Laboratorio</th>
                <td>{{ muestra.pdfLab }}</td>
            </tr>
        </tbody>
    </table>
    <h1>Lecturas</h1>
    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Concentración</th>
                <th>Tecnica Analítica</th>
                <th>Lc</th>
                <th>Incertidumbre</th>
                <th>Acciones</th>
            </tr>
        </thead>
        <tbody>
        {% for lectura in lecturas %}
            <tr>
                <td><a href="{{ path('lectura_show', { 'id': lectura.id }) }}">{{ lectura.id }}</a></td>
                <td>{{ lectura.concentracion }}</td>
                <td>{{ lectura.tecAnalitica }}</td>
                <td>{{ lectura.lc }}</td>
                <td>{{ lectura.incertidumbre }}</td>
                <td>
                    <ul class="list-inline">
                        <li class="list-inline-item">
                            <a href="{{ path('lectura_show', { 'id': lectura.id }) }}"><span class="glyphicon glyphicon-eye-open" aria-hidden="true"></span></a>
                        </li>
                        <li class="list-inline-item">
                            <a href="{{ path('lectura_edit', { 'id': lectura.id }) }}"><span class="glyphicon glyphicon-edit" aria-hidden="true"></span></a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
</table>

    <ul class="list-inline">
        <li>
            <a class="btn btn-info" href="{{ path('muestra_index') }}">Volver</a>
        </li>
        <li>
            <a class="btn btn-primary" href="{{ path('muestra_edit', { 'id': muestra.id }) }}">Editar</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input class="btn btn-danger" type="submit" value="Eliminar">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
