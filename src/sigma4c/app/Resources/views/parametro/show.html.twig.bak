{% extends 'base.html.twig' %}

{% block body %}
    <h1>Parametro</h1>

    <table>
        <tbody>
            <tr>
                <th>Nombre</th>
                <td>{{ parametro.nombre }}</td>
            </tr>
            <tr>
                <th>Unidad</th>
                <td>{{ parametro.unidad }}</td>
            </tr>
            <tr>
                <th>Id</th>
                <td>{{ parametro.id }}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('parametro_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('parametro_edit', { 'id': parametro.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
