{% extends 'sigmabase.html.twig' %}

{% block body %}
    <h1>Nuevo Parametro</h1>

    {{ form_start(form, {'attr': {'class': 'form-horizontal'}}) }}
    <div class="form-group">
        {{ form_label(form.nombre, 'Nombre Parametro') }}
        {{ form_errors(form.nombre) }}
        {{ form_widget(form.nombre, {'attr': {'class': 'form-control'}}) }}
    </div>
    <div class="form-group">
        {{ form_label(form.unidad, 'Unidad') }}
        {{ form_errors(form.unidad) }}
        {{ form_widget(form.unidad, {'attr': {'class': 'form-control'}}) }}
    </div>
    <div class="form-group">
        {{ form_label(form.idMuestra, 'Muestra') }}
        {{ form_errors(form.idMuestra) }}
        {{ form_widget(form.idMuestra, {'attr': {'class': 'form-control'}}) }}
    </div>
    <input class="btn btn-default" type="submit" value="Crear"/>
    {{ form_end(form) }}
    <br/>
    <ul class="list-inline">
        <li>
            <a class="btn btn-info" href="{{ path('parametro_index') }}">Volver</a>
        </li>
    </ul>
{% endblock %}
