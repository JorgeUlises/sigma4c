{% extends 'sigmabase.html.twig' %}

{% block body %}
    <h1>Nueva Lectura</h1>

    {{ form_start(form, {'attr': {'class': 'form-horizontal'}}) }}
        <div class="form-group">
          {{ form_label(form.concentracion, 'Concentracion') }}
          {{ form_errors(form.concentracion) }}
          {{ form_widget(form.concentracion, {'attr': {'class': 'form-control'}}) }}
        </div>
        <div class="form-group">
          {{ form_label(form.tecAnalitica, 'Tecnica Analítica') }}
          {{ form_errors(form.tecAnalitica) }}
          {{ form_widget(form.tecAnalitica, {'attr': {'class': 'form-control'}}) }}
        </div>
        <div class="form-group">
          {{ form_label(form.lc, 'Lc') }}
          {{ form_errors(form.lc) }}
          {{ form_widget(form.lc, {'attr': {'class': 'form-control'}}) }}
        </div>
        <div class="form-group">
          {{ form_label(form.incertidumbre, 'Incertidumbre') }}
          {{ form_errors(form.incertidumbre) }}
          {{ form_widget(form.incertidumbre, {'attr': {'class': 'form-control'}}) }}
        </div>
        <div class="form-group">
          {{ form_label(form.idParametro, 'Parámetro') }}
          {{ form_errors(form.idParametro) }}
          {{ form_widget(form.idParametro, {'attr': {'class': 'form-control'}}) }}
        </div>
        <div class="form-group">
          {{ form_label(form.idMuestra, 'Muestra') }}
          {{ form_errors(form.idMuestra) }}
          {{ form_widget(form.idMuestra, {'attr': {'class': 'form-control'}}) }}
        </div>
        <input class="btn btn-default"  type="submit" value="Crear" />
    {{ form_end(form) }}

    <ul class="list-inline">
        <li>
            <a class="btn btn-info" href="{{ path('lectura_index') }}">Volver</a>
        </li>
    </ul>
{% endblock %}
