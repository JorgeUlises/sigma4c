{% extends 'sigmabase.html.twig' %}

{% block body %}
    <h1>Lecturas</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Concentración</th>
                <th>Tecnica Analítica</th>
                <th>Lc</th>
                <th>Incertidumbre</th>
                <th>Acciones</th>
            </tr>
        </thead>
        <tbody>
        {% for lectura in lecturas %}
            <tr>
                <td><a href="{{ path('lectura_show', { 'id': lectura.id }) }}">{{ lectura.concentracion }}</a></td>
                <td>{{ lectura.tecAnalitica }}</td>
                <td>{{ lectura.lc }}</td>
                <td>{{ lectura.incertidumbre }}</td>
                <td>
                    <ul class="list-inline">
                        <li class="list-inline-item">
                            <a href="{{ path('lectura_show', { 'id': lectura.id }) }}"><span class="glyphicon glyphicon-eye-open" aria-hidden="true"></span></a>
                        </li>
                        <li class="list-inline-item">
                            <a href="{{ path('lectura_edit', { 'id': lectura.id }) }}"><span class="glyphicon glyphicon-edit" aria-hidden="true"></span></a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul class="list-inline">
        <li>
            <a class="btn btn-default" href="{{ path('lectura_new') }}">Nuevo</a>
        </li>
    </ul>
{% endblock %}
