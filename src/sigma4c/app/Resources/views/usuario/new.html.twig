{% extends 'sigmabase.html.twig' %}

{% block body %}
    <h1>Usuario creation</h1>

    {{ form_start(form) }}
    <div class="form-group">
        {{ form_label(form.alias, 'Nombre') }}
        {{ form_errors(form.alias) }}
        {{ form_widget(form.alias, {'attr': {'class': 'form-control'}}) }}
    </div>
    <div class="form-group">
        {{ form_label(form.nombre, 'Nombre Completo') }}
        {{ form_errors(form.nombre) }}
        {{ form_widget(form.nombre, {'attr': {'class': 'form-control'}}) }}
    </div>
    <div class="form-group">
        {{ form_label(form.mail, 'Correo') }}
        {{ form_errors(form.mail) }}
        {{ form_widget(form.mail, {'attr': {'class': 'form-control'}}) }}
    </div>
    <div class="form-group">
        {{ form_label(form.idEmpresa, 'Empresa') }}
        {{ form_errors(form.idEmpresa) }}
        {{ form_widget(form.idEmpresa, {'attr': {'class': 'form-control'}}) }}
    </div>
    <div class="form-group">
        {{ form_label(form.idRol, 'Rol') }}
        {{ form_errors(form.idRol) }}
        {{ form_widget(form.idRol, {'attr': {'class': 'form-control'}}) }}
    </div>
        <input class="btn btn-default" type="submit" value="Crear" />
    {{ form_end(form) }}
    <br/>

    <ul class="list-inline">
        <li>
            <a class="btn btn-info" href="{{ path('usuario_index') }}">Volver</a>
        </li>
    </ul>
{% endblock %}
