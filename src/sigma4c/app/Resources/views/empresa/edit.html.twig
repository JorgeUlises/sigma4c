{% extends 'sigmabase.html.twig' %}

{% block body %}
    <h1>Editar Empresa</h1>

    {{ form_start(edit_form, {'attr': {'class': 'form-horizontal'}}) }}
      <div class="form-group">
          {{ form_label(edit_form.nombre, 'Nombre') }}
          {{ form_errors(edit_form.nombre) }}
          {{ form_widget(edit_form.nombre, {'attr': {'class': 'form-control'}}) }}
      </div>
      <div class="form-group">
          {{ form_label(edit_form.nit, 'NIT') }}
          {{ form_errors(edit_form.nit) }}
          {{ form_widget(edit_form.nit, {'attr': {'class': 'form-control'}}) }}
      </div>
      <div class="form-group">
          {{ form_label(edit_form.email, 'Email') }}
          {{ form_errors(edit_form.email) }}
          {{ form_widget(edit_form.email, {'attr': {'class': 'form-control'}}) }}
      </div>
      <div class="form-group">
          {{ form_label(edit_form.ciudad, 'Ciudad') }}
          {{ form_errors(edit_form.ciudad) }}
          {{ form_widget(edit_form.ciudad, {'attr': {'class': 'form-control'}}) }}
      </div>
      <div class="form-group">
          {{ form_label(edit_form.direccion, 'Direcci√≥n') }}
          {{ form_errors(edit_form.direccion) }}
          {{ form_widget(edit_form.direccion, {'attr': {'class': 'form-control'}}) }}
      </div>
      <div class="form-group">
          {{ form_label(edit_form.telefono, 'Telefono') }}
          {{ form_errors(edit_form.telefono) }}
          {{ form_widget(edit_form.telefono, {'attr': {'class': 'form-control'}}) }}
      </div>
      <div class="form-group">
          {{ form_label(edit_form.idProyecto, 'Proyecto') }}
          {{ form_errors(edit_form.idProyecto) }}
          {{ form_widget(edit_form.idProyecto, {'attr': {'class': 'form-control'}}) }}
      </div>
    <ul class="list-inline">
        <li>
            <input class="btn btn-default"  type="submit" value="Guardar"/>
        </li>
        <li>
            <a class="btn btn-info" href="{{ path('empresa_index') }}">Volver</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input class="btn btn-danger" type="submit" value="Eliminar">
            {{ form_end(delete_form) }}
        </li>
    </ul>
    {{ form_end(edit_form) }}
{% endblock %}
