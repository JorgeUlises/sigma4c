        {{ form_label(form.telefono, 'Telefono') }}
        {{ form_errors(form.telefono) }}
        {{ form_widget(form.telefono, {'attr': {'class': 'form-control'}}) }}
    </div>
    <div class="form-group">
        {{ form_label(form.idProyecto, 'Proyecto') }}
        {{ form_errors(form.idProyecto) }}
        {{ form_widget(form.idProyecto, {'attr': {'class': 'form-control'}}) }}
    </div>
    <input class="btn btn-default" type="submit" value="Crear"/>
    {{ form_end(form) }}
    <br/>

    <ul class="list-inline">
        <li>
            <a class="btn btn-info" href="{{ path('empresa_index') }}">Volver</a>
        </li>
    </ul>
