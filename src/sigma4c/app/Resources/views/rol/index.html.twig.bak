{% extends 'base.html.twig' %}

{% block body %}
    <h1>Rol list</h1>

    <table>
        <thead>
            <tr>
                <th>Nombre</th>
                <th>Descripcion</th>
                <th>Id</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for rol in rols %}
            <tr>
                <td><a href="{{ path('rol_show', { 'id': rol.id }) }}">{{ rol.nombre }}</a></td>
                <td>{{ rol.descripcion }}</td>
                <td>{{ rol.id }}</td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('rol_show', { 'id': rol.id }) }}">show</a>
                        </li>
                        <li>
                            <a href="{{ path('rol_edit', { 'id': rol.id }) }}">edit</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('rol_new') }}">Create a new entry</a>
        </li>
    </ul>
{% endblock %}
