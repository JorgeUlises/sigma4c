{% extends 'sigmabase.html.twig' %}

{% block body %}
    <h1>PuntoControl</h1>

    <table>
        <tbody>
            <tr>
                <th>Etiqueta</th>
                <td>{{ puntoControl.etiqueta }}</td>
            </tr>
            <tr>
                <th>Geometria</th>
                <td>{{ puntoControl.geometria }}</td>
            </tr>
            <tr>
                <th>Id</th>
                <td>{{ puntoControl.id }}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('puntocontrol_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('puntocontrol_edit', { 'id': puntoControl.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
