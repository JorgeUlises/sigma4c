{% extends 'sigmabase.html.twig' %}

{% block body %}
    <h1>Muestra</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ muestra.id }}</td>
            </tr>
            <tr>
                <th>Responsable</th>
                <td>{{ muestra.responsable }}</td>
            </tr>
            <tr>
                <th>Producto</th>
                <td>{{ muestra.producto }}</td>
            </tr>
            <tr>
                <th>Lugar de Toma</th>
                <td>{{ muestra.lugarToma }}</td>
            </tr>
            <tr>
                <th>Foto</th>
                <td>{{ muestra.foto }}</td>
            </tr>
            <tr>
                <th>Num Muestras</th>
                <td>{{ muestra.nMuestras }}</td>
            </tr>
            <tr>
                <th>Fecha Toma</th>
                <td>{% if muestra.fechaToma %}{{ muestra.fechaToma|date('Y-m-d') }}{% endif %}</td>
            </tr>
            <tr>
                <th>Fecha Recepción</th>
                <td>{% if muestra.fechaRecepcion %}{{ muestra.fechaRecepcion|date('Y-m-d') }}{% endif %}</td>
            </tr>
            <tr>
                <th>Fecha Análisis</th>
                <td>{% if muestra.fechaAnalisis %}{{ muestra.fechaAnalisis|date('Y-m-d') }}{% endif %}</td>
            </tr>
            <tr>
                <th>Tipo Muestreo</th>
                <td>{{ muestra.tipoMuestreo }}</td>
            </tr>
            <tr>
                <th>Geometría</th>
                <td>{{ muestra.geometria }}</td>
            </tr>
        </tbody>
    </table>

    <ul class="list-inline">
        <li>
            <a class="btn btn-info" href="{{ path('muestra_index') }}">Volver</a>
        </li>
        <li>
            <a class="btn btn-primary" href="{{ path('muestra_edit', { 'id': muestra.id }) }}">Editar</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input class="btn btn-danger" type="submit" value="Eliminar">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
