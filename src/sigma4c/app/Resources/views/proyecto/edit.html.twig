{% extends 'sigmabase.html.twig' %}

{% block body %}
    <h1>Editar Proyecto</h1>

    {{ form_start(edit_form) }}
    <div class="form-group">
        {{ form_label(edit_form.nombre, 'Nombre') }}
        {{ form_errors(edit_form.nombre) }}
        {{ form_widget(edit_form.nombre, {'attr': {'class': 'form-control'}}) }}
    </div>
    <div class="form-group">
        {{ form_label(edit_form.geometria, 'Geometr√≠a') }}
        {% include 'proyecto/editor.html.twig' %}
        {{ form_errors(edit_form.geometria) }}
        {{ form_widget(edit_form.geometria, {'attr': {'class': 'form-control'}}) }}
    </div>
    <div class="form-group">
        {{ form_label(edit_form.idEmpresa, 'Empresa') }}
        {{ form_errors(edit_form.idEmpresa) }}
        {{ form_widget(edit_form.idEmpresa, {'attr': {'class': 'form-control'}}) }}
    </div>
    <ul class="list-inline">
        <li>
            <input class="btn btn-default"  type="submit" value="Guardar"/>
        </li>
        <li>
            <a class="btn btn-info" href="{{ path('proyecto_index') }}">Volver</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input class="btn btn-danger" type="submit" value="Eliminar">
            {{ form_end(delete_form) }}
        </li>
    </ul>
    {{ form_end(edit_form) }}
{% endblock %}
