{% extends 'sigmabase.html.twig' %}

{% block body %}
    <h1>Nuevo Proyecto</h1>

    {{ form_start(form, {'attr': {'class': 'form-horizontal'}}) }}
    <div class="form-group">
        {{ form_label(form.nombre, 'Nombre') }}
        {{ form_errors(form.nombre) }}
        {{ form_widget(form.nombre, {'attr': {'class': 'form-control'}}) }}
    </div>
    <div class="form-group">
        {{ form_label(form.geometria, 'Geometr√≠a') }}
        {% include 'proyecto/editor.html' %}
        {{ form_errors(form.geometria) }}
        {{ form_widget(form.geometria, {'attr': {'class': 'form-control'}}) }}
    </div>
    <div class="form-group">
        {{ form_label(form.idEmpresa, 'Empresa') }}
        {{ form_errors(form.idEmpresa) }}
        {{ form_widget(form.idEmpresa, {'attr': {'class': 'form-control'}}) }}
    </div>
    <input class="btn btn-default" type="submit" value="Crear"/>
    {{ form_end(form) }}
    <br/>

    <ul class="list-inline">
        <li>
            <a class="btn btn-info" href="{{ path('proyecto_index') }}">Volver</a>
        </li>
    </ul>
{% endblock %}
